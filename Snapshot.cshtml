<div class="container">
    <div class="col-md-12">
        <h3 class="snapshotHeaders">Weekly Hires</h3>
        <table class="table margin10">
            <tr>
                <th></th>
                <th class="auto-style3 table-headersgray">
                    Name
                </th>
                @*<th class="auto-style2 table-headersgray">
                    Last Name
                </th>*@
                <th class="auto-style2 table-headersgray">
                    Student Location
                </th>
                <th class="auto-style2 table-headersgray">
                    Job Title
                </th>
                <th class="auto-style2 table-headersgray">
                    Company Name
                </th>
                <th class="auto-style2 table-headersgray">
                    Hire Date
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.WeeklyHires)
            {
                <tr>
                    <td></td>
                    <td align="left" class="auto-style3">
                        @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName) @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                    </td>*@
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.JPStudentLocation)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.JPJobTitle)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.JPCompanyName)
                    </td>
                    <td class="text-center">
                        @item.JPHireDate.ToShortDateString()
                    </td>
                </tr>
            }
        </table>
        @Html.ActionLink("Email Students", "EmailStudents", new { newStudent = false, term = "Week" } , new { @class = "btn btn-primary" })
    </div>
</div>


